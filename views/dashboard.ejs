<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <div class="page-header text-center">
        <h1><span class="fa fa-tachometer"></span> Dashboard</h1>
        <a href="/dashboard/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link href="css/style.css" rel="stylesheet" type="text/css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body onload="cache()">

<div class="meteo" id="meteo">
    <h4>Météo</h4>
    <form action="/dashboard/currentMeteo" method="post">
        <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
        <input type="submit" class="ghost-button" value="Get Weather" id="print">
    </form>
    <button class="btn btn-primary">print</button>
    <% if(weather !== null){ %>

    <% } %>

    <div class="container" id="current meteo">
        <% if(weather !== null){ %>
        <%for (var result in weather){%>
        <p><%=weather[result]%></p>
        <%}%>
        <% } %>
        <% if(error !== null){ %>
            <p><%= error %></p>
        <% } %>
    </div>

    <div class="container" id="meteoWeek">
        <% if(weatherWeek !== null){ %>
        <%for (var result in weatherWeek){%>
        <p><%=weatherWeek[result]%></p>
        <% } %>
        <% } %>
        <% if(error !== null){ %>
            <p><%= error %></p>
        <% } %>
    </div>

    <script>
        function cache() {
            $('#meteoWeek').toggle();
            $('#current meteo').toggle();
        }
    </script>
    <script>
        $('button').click(function(){
            $('#meteoWeek').toggle();
        });
    </script>
</div>



<div class="youtube" id="youtube">
    <h4>Youtube</h4>

    <form action="/dashboard/currentMeteo" method="post">
        <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
        <input type="submit" class="ghost-button" value="Get Weather">
    </form>


</div>



<div class="steam" id="steam">
    <h4>Steam</h4>

    <form action="/dashboard/currentMeteo" method="post">
        <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
        <input type="submit" class="ghost-button" value="Get Weather">
    </form>

</div>
</body>
</html>
